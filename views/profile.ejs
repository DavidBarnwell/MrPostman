<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
        <link rel="stylesheet" href="/stylesheets/social-buttons.css">
<link href='http://fonts.googleapis.com/css?family=Courgette|Covered+by+your+Grace|Oswald' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="/stylesheets/style.css">
        <link rel="icon" 
      type="image/png" 
      href="./images/mrIcon.png">
    
</head>
<body>

    <header>
        <nav class="navbar navbar-default navbar-fixed-top">
            <div>
                <div class="container">
                    <div class="row">
                        <ul class="nav navbar-nav">
                            <li><a href="/"><span class="glyphicon glyphicon-home" aria-hidden="true"></span></a></li>
                            <li><a href="/"><span class="header">Mr. Postman</span></a></li>
                            <li><a href="/profile"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

<div class="container">

   

    <div class="row">

        <!-- FACEBOOK INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3 class="text-facebook"><span class="fa fa-facebook"></span> Facebook</h3>

                <!-- check if the user has this token (is the user authenticated with this social account) -->
                <% if (user.local.facebook.token) { %>
                    <p>
                        <strong>id</strong>: <%= user.local.facebook.id %><br>                        
                        <strong>email</strong>: <%= user.local.facebook.email %><br>
                        <strong>name</strong>: <%= user.local.facebook.name %><br>
                    </p>

                    <a href="/unlink/facebook" class="btn btn-facebook">Unlink</a>
                <% } else { %>
                    <a href="/auth/facebook" class="btn btn-facebook">Connect Facebook</a>
                <% } %>

            </div>
        </div>

        <!-- TWITTER INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3 class="text-twitter"><span class="fa fa-twitter"></span> Twitter</h3>

                <% if (user.local.twitter.token) { %>
                    <p>
                        <strong>id</strong>: <%= user.local.twitter.id %><br>                    
                        <strong>display name</strong>: <%= user.local.twitter.displayName %><br>
                        <strong>username</strong>: <%= user.local.twitter.username %>
                    </p>

                    <a href="/unlink/twitter" class="btn btn-twitter">Unlink</a>
                <% } else { %>
                    <a href="/auth/twitter" class="btn btn-twitter">Connect Twitter</a>
                <% } %>

            </div>
        </div>
    </div>

    <div class="row">
        <!-- YOUTUBE INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3 class="text-youtube"><span class="fa fa-youtube"></span> Youtube</h3>

                <% if (user.local.google.token) { %>
                    <p>
                        <strong>id</strong>: <%= user.local.google.id %><br>                        
                        <strong>email</strong>: <%= user.local.google.email %><br>
                        <strong>name</strong>: <%= user.local.google.name %>
                    </p>

                    <a href="/unlink/google" class="btn btn-google-plus">Unlink</a>
                <% } else { %>
                    <a href="/auth/google" class="btn btn-google-plus">Connect Youtube</a>
                <% } %>

            </div>
        </div>

        <!-- INSTAGRAM INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3 class="text-instagram"><span class="fa fa-instagram"></span> Instagram</h3>

                <% if (user.local.instagram.token) { %>
                    <p>
                        <strong>id</strong>: <%= user.local.instagram.id %><br>                        
                        <strong>display name</strong>: <%= user.local.instagram.fullName %><br>
                        <strong>username</strong>: <%= user.local.instagram.username %>
                    </p>

                    <a href="/unlink/instagram" class="btn btn-instagram">Unlink</a>
                <% } else { %>
                    <a href="/auth/instagram" class="btn btn-instagram">Connect Instagram</a>
                <% } %>

            </div>
        </div>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-12">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>
                
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %><br>
                    </p>
                    <a href="/logout" ><span class="fa fa-sign-out" aria-hidden="true"></span>Logout</a>

            </div>
        </div>
    </div>

</div>
</body>
</html>