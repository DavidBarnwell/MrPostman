<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
	<title>Sign up</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
	<link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
	<link href='http://fonts.googleapis.com/css?family=Courgette|Covered+by+your+Grace|Oswald' rel='stylesheet' type='text/css'>
	<link rel="icon" 
      type="image/png" 
      href="./images/mrIcon.png">	
	</head>
<body style="padding-top:0px; background-image:url(./images/36.jpg); background-size:100%">
		<h1 class="main">Mr Postman</h1>

		<img src="/images/Mr.png" id="mainLogo" alt="Logo">

		<p class="main">Your latest posts</p>

<div class="container" id="main">

<div class="col-sm-6 col-sm-offset-3">

	<h1><span class="fa fa-sign-in" ></span> Signup</h1>

	<!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

	<!-- LOGIN FORM -->
	<form action="/signup" method="post" style="color:#BF4E4E">
		<div class="form-group">
			<label>Email</label>
			<input type="text" class="form-control" name="email">
		</div>
		<div class="form-group">
			<label>Password</label>
			<input type="password" class="form-control" name="password">
		</div>
		<button type="submit" class="btn btn-danger btn-lg">Signup</button>
	</form>

	<hr>

	<p>Already have an account? <a href="/login" style="color:#BB4D4D">Login</a></p>

</div>

</div>
</body>
</html>
